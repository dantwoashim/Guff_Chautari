# Core app runtime
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Optional local fallback for development.
# Production/default flow is BYOK in-app (encrypted in browser storage).
GEMINI_API_KEY=

# Connector runtime mode
# Keep false in production to prevent mock-backed connector execution.
VITE_ENABLE_MOCK_CONNECTORS=false

# Self-host runtime defaults (used by scripts/self-host-setup.sh)
APP_PORT=4173
POSTGRES_PORT=54322
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
# Pin to a fixed tag in production for reproducible deploys.
SUPABASE_POSTGRES_IMAGE=supabase/postgres:latest
ENABLE_MONITORING=no
